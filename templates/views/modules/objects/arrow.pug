                feMergeNode(in="SourceGraphic")
        polyline(points="40 40 581.5 581.5 1123 40" filter="url(#dropshadow)" style="fill:none;stroke:#fff;stroke-linecap:round;stroke-linejoin:round;stroke-width:80px;")
